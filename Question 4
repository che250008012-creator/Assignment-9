#include <iostream>
using namespace std;

struct SalesRecord {
    string month;
    float amount;
};

int main() {
    SalesRecord sales[12]={};
    for (int i=0; i<12; i++){
        cout<<"Enter name of the month: "<<" ";
        cin>>sales[i].month;
        cout<<"Enter the sales amount: "<<" ";
        cin>>sales[i].amount;
    };
    int max=0;
    int min=0;
    for (int j=0; j<12; j++) {
        if (sales[j].amount<sales[min].amount) {
            min=j;
        };
        if (sales[j].amount>sales[max].amount) {
            max=j;
        };
    }
    cout<<endl;
    cout<<"Month with maximum sales: "<<sales[max].month<<endl;
    cout<<"Month with minimum sales: "<<sales[min].month<<endl;
    return 0;
}
